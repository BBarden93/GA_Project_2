<h1>New Spot</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1>New Spot</h1>
    <%= form_for @spot do |f| %>
      <div class="form-group">
        <label>Location</label>
        <%= f.text_field :location, class: "form-control", placeholder: "Location" %>
      </div>
      <div class="form-group">
        <label>Description</label>
        <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
        <small id="emailHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label>Obstacles</label>
        <%= f.password_field :password, class: "form-control", placeholder: "Obstacles" %>
      </div>
      <div class="form-group">
        <label>Image</label>
        <%= f.password_field :image, class: "form-control", placeholder: "Image URL" %>
      </div>
      <%= f.submit "Create Account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

