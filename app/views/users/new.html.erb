<h1>New You</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1>Sign Up</h1>
    <%= form_for @user do |f| %>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
      <div class="form-group">
        <label>Email</label>
        <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label>Password</label>
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      </div>
      <div class="form-group">
        <label>Confirm Password</label>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
      </div>
      <div class="form-group">
        <label>Bio</label>
        <%= f.text_field :about, class: "form-control", placeholder: "About" %>
        <small id="aboutHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label>Image</label>
        <%= f.text_field :image, class: "form-control", placeholder: "Profile Pic URL" %>
        <small id="imageHelp" class="form-text text-muted"></small>
      </div>
      <%= f.submit "Create Account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

